<?xml version="1.0" encoding="utf-8"?>
<com.lmy.common.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/galleryItemPadding"
    android:paddingLeft="@dimen/galleryItemPadding"
    android:paddingRight="@dimen/galleryItemPadding"
    android:paddingTop="@dimen/galleryItemPadding">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        fresco:placeholderImage="@mipmap/ic_gallery_place"
        fresco:placeholderImageScaleType="centerCrop" />

    <CheckBox
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/galleryItemPadding"
        android:layout_marginTop="@dimen/galleryItemPadding"
        android:background="@color/transparent"
        android:button="@drawable/checkbox_select"
        android:clickable="false" />
</com.lmy.common.widget.SquareLayout>