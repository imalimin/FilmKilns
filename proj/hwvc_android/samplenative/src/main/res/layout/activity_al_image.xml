<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.lmy.hwvcnative.widget.AlScrollSurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:fitsSystemWindows="false" />

    <com.lmy.hwvcnative.widget.AlDebugView
        android:id="@+id/debugView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        android:visibility="gone" />

    <com.lmy.hwvcnative.widget.AlCropView
        android:id="@+id/cropView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TableRow>

                <TextView
                    android:paddingRight="8dp"
                    android:text="Layer"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/layerView"
                    android:text="-1"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:paddingRight="8dp"
                    android:text="Scale"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/scaleView"
                    android:text="0"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:paddingRight="8dp"
                    android:text="Rotation"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/rotateView"
                    android:text="0"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="Align Crop"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />

                <CheckBox android:id="@+id/alignCropBox" />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="Select"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />

                <CheckBox android:id="@+id/selectBox" />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="Paint"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />

                <CheckBox android:id="@+id/paintBox" />
            </TableRow>
        </TableLayout>

        <ImageButton
            android:id="@+id/optBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:src="@mipmap/ic_gallery_arrow_up"
            android:tint="@color/colorAccent"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/optLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#88ffffff"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#20000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fileBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="File"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/editBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="Edit"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/canvasBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="Canvas"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/layerBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="Layer"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>